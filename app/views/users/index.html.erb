<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td>
          <% user.tags.each do |tag| %>
            <%= tag.name %>
          <% end %>
        </td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id = "nav">
  <button><%= link_to 'First', users_path(size: @size) %></button>
  <% unless @users.include?(User.first) %>
    <button><%= link_to "<< Previous #{@size}", users_path(page: @page - 1, size: @size) %></button>
  <% end %>
  <% unless @users.include?(User.last) %>
    <button><%= link_to "Next #{@size} >>", users_path(page: @page + 1, size: @size) %></button>
  <% end %>
</div>

<button><%= link_to "10", users_path(size: 10) %></button>
<button><%= link_to "20", users_path(size: 20) %></button>
<button><%= link_to "50", users_path(size: 50) %></button>

